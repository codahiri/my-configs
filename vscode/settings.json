{
    "update.mode": "none",
    "extensions.autoUpdate": false,
    "window.titleBarStyle": "custom",
    "window.menuBarVisibility": "toggle",
    "editor.fontFamily": "FantasqueSansM Nerd Font",
    "terminal.integrated.fontFamily": "FantasqueSansM Nerd Font",
    "editor.fontSize": 14,
    "explorer.confirmDragAndDrop": false,
    "editor.fontLigatures": true,
    "editor.cursorStyle": "line",
    "editor.minimap.enabled": false,
    "workbench.startupEditor": "none",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.formatOnPaste": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "vscode.typescript-language-features",
    // "deno.enable": false,
    // "deno.lint": false,
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features",
    },
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features", // denoland.vscode-deno
    },
    "workbench.layoutControl.type": "menu",
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 10,
    "workbench.editor.limit.perEditorGroup": true,
    "workbench.editor.showTabs": "none",
    "files.autoSave": "off",
    "explorer.openEditors.visible": 9,
    "breadcrumbs.enabled": true,
    "editor.renderControlCharacters": false,
    "workbench.activityBar.location": "hidden",
    "workbench.statusBar.visible": false,
    "editor.scrollbar.vertical": "hidden",
    "editor.scrollbar.horizontal": "hidden",
    "editor.stickyScroll.enabled": false,
    "workbench.layoutControl.enabled": false,
    "editor.mouseWheelZoom": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "explorer.confirmDelete": false,
    "workbench.settings.applyToAllProfiles": [
        "editor.tabSize"
    ],
    "typescript.updateImportsOnFileMove.enabled": "always",
    // auto change theme
    "vscode-auto-light-dark-theme.autoToggle": true,
    "vscode-auto-light-dark-theme.lightTheme": "GHIBLI - (Lynx theme)",
    "vscode-auto-light-dark-theme.darkTheme": "DARK (Lynx theme)",
    "vscode-auto-light-dark-theme.toggleSetting": "custom",
    "vscode-auto-light-dark-theme.lightStartTime": 6,
    "vscode-auto-light-dark-theme.darkStartTime": 20,
    "workbench.colorTheme": "DARK (Lynx theme)",
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[blade]": {
        "editor.defaultFormatter": "shufo.vscode-blade-formatter"
    },
    "[php]": {
        "editor.defaultFormatter": "lkrms.pretty-php"
    },
    "[css]": {
        "editor.defaultFormatter": "vscode.css-language-features"
    },
    "explorer.confirmPasteNative": false,
    "git.autofetch": true,
}
